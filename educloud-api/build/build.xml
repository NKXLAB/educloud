<project name="educloud-api" default="clean" basedir="../">

	<property file="build/build.properties" />
	<buildnumber file="build/build.num" />
	
	<property name="manifest.implementation.version" value="${major.number}.${minor.number}.0.${build.number}" />
	
	<!-- set global properties for this build -->
	<tstamp>
		<format property="TODAY" pattern="yyyy-MM-dd HH:mm:ss" />
	</tstamp>
	
	<echo>${java.home}</echo>
	<echo>${java.version}</echo>
	<echo>${java.vendor}</echo>

	<property name="target" value="target" />
	<property name="src" value="src" />
	<property name="lib" value="lib" />
	<property name="bin" value="${target}/bin" />
	<property name="manifest" value="${target}/MANIFEST.MF" />

	<path id="project.class.path">
		<fileset dir="${lib}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="init">
		<delete dir="${target}" />
		<mkdir dir="${target}" />
		<mkdir dir="${bin}" />
		
		<manifest file="${manifest}">
			<attribute name="Built-Date" value="${TODAY}" />
			<attribute name="Class-Path" value=". lib/gson-1.5.jar lib/jersey-client-1.4.jar lib/jersey-core-1.4.jar lib/educloud-external-entities.jar" />
		</manifest>
	</target>

	<target name="compile" depends="init">
		<javac classpathref="project.class.path" debug="true" destdir="${bin}"
			srcdir="${src}" failonerror="true" />
	</target>

	<target name="jar" depends="compile">
		<jar jarfile="${target}/educloud-api.jar" basedir="${bin}" manifest="${manifest}" />
	</target>

	<target name="clean" depends="jar">
	</target>

</project>
